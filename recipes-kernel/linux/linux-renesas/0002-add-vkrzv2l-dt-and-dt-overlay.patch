+		clock-frequency = <24000000>;
+
+		vana-supply = <&imx219_vana_2v8>;
+		vdig-supply = <&imx219_vdig_1v8>;
+		dovdd-supply = <&imx219_vddl_1v2>;
+		
+		reset-gpios = <&pinctrl RZG2L_GPIO(2, 0) GPIO_ACTIVE_HIGH>;
+
+		port {
+			imx219_to_csi: endpoint {
